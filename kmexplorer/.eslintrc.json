{
	"extends": [
		"@nuxt/eslint-config"
	],
	"rules": {
		"no-tabs": "off",
		"indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
		],
		"vue/script-indent": [
			"error",
			"tab",
			{ "baseIndent": 1 }
		],
		"vue/html-indent": [
			"error",
			"tab",
			{ "baseIndent": 1 }
		],
		"no-console": "warn",
		"space-before-function-paren": "off",
		"camelcase": "off",
		"@typescript-eslint/no-unused-vars": "off",
		"no-unused-vars": "off",
		"vue/require-default-prop": "off",
		"vue/multi-word-component-names": "off",
		"no-redeclare": 0
	},
	"overrides": [
		{
			"files": ["*.vue"],
			"rules": {
				"indent": "off"
			}
		}
	]
}
